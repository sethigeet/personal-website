---
import MainLayout from "@layouts/MainLayout.astro";
---

<MainLayout>
  <section class="mt-10">
    <h3 class="text-primary text-lg font-semibold">My name is</h3>
    <h1 class="text-6xl font-bold">Geet Sethi.</h1>
    <h5 class="mt-3 text-5xl text-slate-300">Building a better tomorrow.</h5>
    <h6 class="mt-5 text-lg font-medium text-slate-300">
      A student at the Indian Institute of Technology Bombay.
    </h6>

    <a
      href="/about"
      class="border-primary hover:bg-primary mt-4 inline-flex items-center justify-center rounded-lg border-2 p-2 px-4 font-medium transition-all duration-200 hover:text-slate-800"
    >
      More about me
      <svg
        class="ml-1"
        stroke="currentColor"
        fill="currentColor"
        stroke-width="0"
        viewBox="0 0 20 20"
        height="1em"
        width="1em"
        xmlns="http://www.w3.org/2000/svg"
        ><path
          fill-rule="evenodd"
          d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
          clip-rule="evenodd"></path></svg
      >
    </a>
  </section>
  <canvas
    id="waves"
    class="h-100% pointer-events-none absolute inset-0 z-[-1] w-screen overflow-hidden bg-transparent"
  ></canvas>
</MainLayout>
<script>
  import "@js/waves";
</script>
